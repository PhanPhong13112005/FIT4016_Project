@model Shop.Application.DTOs.OrderDto
@{
    ViewData["Title"] = "Thanh toán thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-success">✅ Thanh toán thành công!</h2>
    <p>Cảm ơn bạn đã mua hàng tại cửa hàng của chúng tôi.</p>

    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Đơn hàng #@Model.OrderId</h5>
            <p><strong>Ngày đặt:</strong> @Model.OrderDate?.ToString("dd/MM/yyyy")</p>
            <p><strong>Tổng tiền:</strong> @Model.TotalAmount?.ToString("N0") VNĐ</p>
            <p><strong>Trạng thái:</strong> @Model.Status</p>
        </div>
    </div>

    <h4 class="mt-4">Chi tiết đơn hàng</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice?.ToString("N0") VNĐ</td>
                    <td>@($"{item.UnitPrice?.ToString("N0")} VNĐ")</td>

                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="Product" asp-action="AllProduct" class="btn btn-primary mt-3">Tiếp tục mua sắm</a>
	<a asp-controller="Order" asp-action="OrderDetails" class="btn btn-secondary mt-3">Xem đơn hàng của tôi</a>
</div>
