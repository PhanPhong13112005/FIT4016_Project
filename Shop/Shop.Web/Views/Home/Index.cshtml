@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row align-items-center">
        <!-- Giới thiệu shop -->
        <div class="col-md-6 text-center text-md-start">
            <h1 class="display-4 fw-bold mb-3">
                Chào mừng đến với <span class="text-primary">Shop Phụ Kiện Điện Thoại</span>
            </h1>
            <p class="lead text-muted mb-4">
                Nơi bạn có thể tìm thấy mọi phụ kiện điện thoại hot nhất, chất lượng và giá tốt.
                Chúng tôi cam kết bảo hành và giao hàng nhanh chóng toàn quốc.
            </p>
            <a href="/Category/Index" class="btn btn-primary btn-lg px-4">
                <i class="bi bi-search"></i> Tìm sản phẩm ngay
            </a>
        </div>

        <!-- Ảnh minh họa sản phẩm -->
        <div class="col-md-6 text-center mt-4 mt-md-0">
            <img src="https://cdn-icons-png.flaticon.com/512/1008/1008595.png"
                 alt="Ảnh minh họa phụ kiện"
                 class="img-fluid" style="max-height: 350px;">
        </div>
    </div>
</div>
