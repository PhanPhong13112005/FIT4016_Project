@model IEnumerable<Shop.Application.DTOs.ProductDto>
@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Banner ảnh lớn -->
<div class="container-fluid p-0">
    <div class="banner">
        <img src="~/assets/img/baseus.webp" alt="Banner trang chủ" class="img-fluid w-100" style="max-height: 500px; object-fit: cover;">
    </div>
</div>

<!-- Nội dung nổi bật -->
<div class="container mt-5">
    <h2 class="mb-4">Sản phẩm nổi bật</h2>

    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.ProductName">
                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-text">@product.Description</p>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-sm btn-primary">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
